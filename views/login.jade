#namesWrapper
	.row
		.col-md-6.col-md-offset-3.col-xs-12
			.panel.panel-default
				.panel-heading
					h3 ChatIO
				.panel-body
					form#usernameForm(name='loginForm', ng-submit='submit()', novalidate)
						.alert.alert-danger(ng-show='checkErrors()') {{errorText}}
						.form-group
							label Create Username
							.input-group
								input.form-control(size=35, ng-model='username', required)
								.input-group-btn
									button.btn.btn-success(type='submit') Login